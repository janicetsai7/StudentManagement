
@model IEnumerable<Student>
@{
    //Layout = "~/Views/shared/_Layout.cshtml";
    ViewBag.Title = "學生列表信息";

}

<div class="card-group">

    @foreach (var student in Model)
    {
        var photoPath = "~/images/" + (student.PhotoPath??"noimage.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>

            <img class="card-img-top imagesThumbnail" src="@photoPath" asp-append-version="true" />    <!--asp-append-version="true" 增體圖片更新，對靜態文件緩程破壞行為-->
            <div class="card-footer text-center">

                <!-- <a href="/home/details/@student.Id"> view</a>-->
                @*@Html.ActionLink("查看", "details", "home", new { id = student.Id })
                <a href="@Url.Action("details","home",new {id = student.Id})">查看</a>
                <a href="/Home/Details/@student.Id" class="btn btn-primary">查看</a>*@
                <!--使用標記助手Tag Helper-->
                <a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary">查看</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@student.Id" class="btn btn-primary">編輯</a>
                <a href="#" class="btn btn-danger">刪除</a>
            </div>
        </div>
    }
</div>

